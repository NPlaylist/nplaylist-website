@model NPlaylist.ViewModels.Audio.AudioViewModel

@{
    ViewData["Title"] = "Edit";
}

<h4>Audio</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AudioId" />
            <input type="hidden" asp-for="Path" />
            <input type="hidden" asp-for="OwnerId" />
            <input type="hidden" asp-for="UtcCreatedTime" />
            <input type="hidden" asp-for="Meta.AudioMetaId" />

            <div class="form-group">
                <label asp-for="Meta.Title" class="control-label"></label>
                <input asp-for="Meta.Title" class="form-control" />
                <span asp-validation-for="Meta.Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Meta.Album" class="control-label"></label>
                <input asp-for="Meta.Album" class="form-control" />
                <span asp-validation-for="Meta.Album" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Meta.Author" class="control-label"></label>
                <input asp-for="Meta.Author" class="form-control" />
                <span asp-validation-for="Meta.Author" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

