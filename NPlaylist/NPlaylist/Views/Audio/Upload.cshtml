@model NPlaylist.DTOs.UploadedFileDto

@{
    ViewData["Title"] = "Upload";
}

<h2>Upload</h2>

<h4>UploadedFile</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Upload" asp-controller="Audio" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            @Html.TextBoxFor(m => m.FormFile, new { type = "file", accept=".mp3,.wav"})
            
            <input type="submit" value="Upload" />
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

